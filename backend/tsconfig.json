{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "..",            
    "module": "es2020",
    "target": "ES2020",
    "esModuleInterop": true,
    "baseUrl": ".",             
    "paths": {
      "@backend/*": ["./*"],
      "@shared/*": ["../shared/*"],
      "backend/*": ["./*"]
    },
    "moduleResolution": "node"
  },
  "include": [
    "./**/*.ts",               
    "../shared/**/*.ts" 
  ]
}

